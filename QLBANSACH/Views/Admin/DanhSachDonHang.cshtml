@model List<QLBANSACH.Models.DONDATHANG>

<h2>Danh Sách Đơn Hàng</h2>
<table class="table">
    <thead>
        <tr>
            <th>Mã Đơn Hàng</th>
            <th>Đã Thanh Toán</th>
            <th>Tình Trạng Giao Hàng</th>
            <th>Ngày Đặt</th>
            <th>Ngày Giao</th>
            <th>Mã Khách Hàng</th>
            <!-- Thêm các cột khác cần hiển thị -->
        </tr>
    </thead>
    <tbody>
        @foreach (var donHang in Model)
        {
            <tr>
                <td>@donHang.MaDonHang</td>
                <td>@(donHang.DaThanhToan ? "Đã thanh toán" : "Chưa thanh toán")</td>
                <td>@(donHang.TinhTrangGiaoHang ? "Đã giao hàng" : "Chưa giao hàng")</td>
                <td>@donHang.NgayDat.ToString("dd/MM/yyyy")</td>
                <td>@(donHang.NgayGiao.HasValue ? donHang.NgayGiao.Value.ToString("dd/MM/yyyy") : "-")</td>
                <td>@donHang.MaKH</td>
                <!-- Thêm các cột khác tương tự -->
            </tr>
        }
    </tbody>
</table>

